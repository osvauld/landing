---
import "@fontsource/inter";
import "@fontsource/inter/100.css";
import "@fontsource/inter/200.css";
import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";
import "@fontsource/plus-jakarta-sans";
import "@fontsource/plus-jakarta-sans/200.css";
import "@fontsource/plus-jakarta-sans/300.css";
import "@fontsource/plus-jakarta-sans/400.css";
import "@fontsource/plus-jakarta-sans/500.css";

import { SEO } from "astro-seo";

const { title } = Astro.props;

export interface Props {
  title: string;
}

const description =
  "Osvauld is an open-source password manager that helps manage shared credentials across your team, assisting your organization in achieving password hygiene and better overall cybersecurity. Osvauld gives more transparency and control over your credentials, makes the key rotation easy with its intuitive user interface. Share passwords as folders to groups of people now easily with Osvauld.";

const makeTitle = title ? title : "osvauld - password manager for teams";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <!-- <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon.png"> -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description={description}
      canonical="https://osvauld.com"
      openGraph={{
        basic: {
          url: "https://osvauld.com",
          title: "osvauld - open source credential manager for teams",
          type: "Website",
          image:
            "https://raw.githubusercontent.com/osvauld/landing/major/src/assets/images/dashboard.png",
        },
        optional: {
          description: description,
        },
        image: {
          alt: "osvauld Dashboard Screenshot",
        },
      }}
      twitter={{
        creator: "@tony_antny",
      }}
    />
  </head>
  <body>
    <slot />
    <script type="module">
      import mixpanel from "mixpanel-browser";
      mixpanel.init(import.meta.env.PUBLIC_PROJECT_KEY, {
        track_pageview: true,
        persistence: "localStorage",
      });
      mixpanel.track("Page Viewed", {
        page: window.location.pathname,
      });
    </script>
    <style is:global>
      @font-face {
        font-family: "Inter";
        font-display: swap;
      }

      @font-face {
        font-family: "Plus Jakarta Sans";
        font-display: swap;
      }
      html {
        font-family: "Inter", "Plus Jakarta Sans";
        background-color: #010409;
        overflow-x: hidden;
        scroll-behavior: smooth;
        box-sizing: border-box;
      }
    </style>
  </body>
</html>
